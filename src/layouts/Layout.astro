---
import "../styles/global.css";
import SEO from "../components/SEO.astro";

interface Props {
  theme?: string;
  title?: string;
  description?: string;
  image?: string;
  url?: string;
}

const {
  theme = "theme-neomoderno",
  title = "QVOLTI — Ingeniería Energética Profesional",
  description = "Soluciones solares, aerotermia e ingeniería energética profesional.",
  image = "https://qvolti.com/og-qvolti.png",
  url = "https://qvolti.com",
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO + OG + Twitter -->
    <SEO
      title={title}
      description={description}
      image={image}
      url={url}
    />

    <!-- Canonical -->
    <link rel="canonical" href={url} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />

    <!-- Icon -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />

    <!-- Schema.org -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "QVOLTI Energía",
        "image": "https://qvolti.com/og-qvolti.png",
        "url": "https://qvolti.com",
        "description": "Soluciones solares, aerotermia e ingeniería energética profesional.",
        "email": "info@qvolti.com",
        "telephone": "+593981807574",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Cumbayá",
          "addressRegion": "Ecuador",
          "addressCountry": "EC"
        }
      }
    </script>
  </head>

  <body
    class={`
      min-h-screen 
      overflow-x-hidden
      transition-colors 
      duration-500 
      scroll-smooth
      ${theme}
    `}
    style="
      background-color: var(--bg);
      color: var(--text);
      font-family: var(--font-body);
    "
  >
    <slot />
  </body>
</html>
